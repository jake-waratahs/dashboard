{
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jquery": true,
    "mocha": true,
  },
  "parser": "babel-eslint",
  "rules": {
    "quotes": [2, "single", "avoid-escape"],
    "strict": [2, "never"],
    "semi": [2, "never"],
    "semi-spacing": [2, {"before": false, "after": true}],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "comma-dangle": 0,
    "eqeqeq": [2, "smart"],
    "indent": ["error", 4],
    "no-console": [2, { "allow": ["info", "warn", "error"] }]
  },
  "plugins": [
    "react"
  ]
}
